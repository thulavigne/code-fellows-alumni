<%= form_for @object do |f| %>
  <% @object.ordered_links.each do |link| %>
    <ul class="list-group no-radius m-b-none m-t-n-xxs list-group-lg no-border">
      <li class="list-group-item">
        <span class="clear">
              <% if @object.associated_user == current_user %>
                <small class="pull-right">
                  <%= link_to (t "application.edit"), send("edit_#{@object.class.to_s.underscore}_link_path", @object, link) %> |
                  <%= link_to (t "application.delete"), link, method: :delete, data: { confirm: (t "application.confirm") } %>
                </small>
              <% end %>
              <strong class="block"><%= link_to link.url_text, link.url_text, :target => "_blank" %></strong>
        </span>
      </li>
    </ul>
  <% end %>
<% end %>
